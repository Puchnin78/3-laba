#include <iostream>
#include <stdio.h>
#include <math.h>
#include <fstream>


using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    ifstream f_input;
    ofstream f_output("chisla.txt");
    ofstream f_input("result.txt");
        std:: cout << "Программа для нахождения площади треугольника" << endl;
    f_input.open("chisla.txt");
    if (f_input.fail());
    cout << "Не удалось открыть файл\n";
    return 1;
       
   


    f_output.open("result.txt");
    int p1, p2, p3, p4, p5, p6, S1, S2, S3, S4, S5, S6, a1, a2, a3, a4, a5, a6, a7, a8, a9, a10, a11, a12;
    p1 = (a1 + a2 + a3) / 2;
    S1 = sqrt(p1 * (p1 - a1) * (p1 - a2) * (p1 - a3));
    p2 = (a3 + a4 + a5) / 2;
    S2 = sqrt(p2 * (p2 - a3) * (p2 - a4) * (p2 - a5));
    p3 = (a5 + a6 + a7) / 2;
    S3 = sqrt(p3 * (p3 - a5) * (p3 - a6) * (p3 - a7));
    p4 = (a7 + a8 + a9) / 2;
    S4 = sqrt(p4 * (p4 - a7) * (p4 - a8) * (p4 - a9));
    p5 = (a9 + a10 + a11) / 2;
    S5 = sqrt(p5 * (p5 - a9) * (p5 - a10) * (p5 - a11));
    p6 = (a11 + a12 + a1) / 2;
    S6 = sqrt(p6 * (p6 - a11) * (p6 - a12) * (p6 - a1));
    printf("Результаты площадей : \n\S1\n\S2\n\S3\n\S4\n\S5\n\S6");
    
    printf("Результат записан в result.txt");
    return 0;
}



